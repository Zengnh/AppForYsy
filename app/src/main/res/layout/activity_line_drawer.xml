<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/drawableRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <com.toolmvplibrary.view.zoom_img.PhotoView
            android:id="@+id/zoomImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <com.appforysy.activity.draw_line.DrawingView
            android:id="@+id/drawLineView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <!-- <dimen name="design_fab_size_normal">50dp</dimen>-->
    <!-- <dimen name ="design_fab_image_size">45dp</dimen>-->

    <GridView
        android:id="@+id/gridViewEidt"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="25dp"
        android:horizontalSpacing="5dp"
        android:numColumns="3"
        android:verticalSpacing="5dp"
        android:visibility="gone" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonDrawable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="25dp"
        android:alpha="0.5"
        android:scaleType="centerCrop"
        android:src="@mipmap/ico_round_add"
        app:backgroundTint="@color/content11"
        app:backgroundTintMode="src_in"
        app:borderWidth="0dp"
        app:elevation="5dp"
        app:fabSize="normal"
        app:pressedTranslationZ="5dp"
        app:rippleColor="#cccccc" />
</RelativeLayout>