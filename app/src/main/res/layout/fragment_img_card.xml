<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.3" />


    <LinearLayout
        android:paddingTop="45dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFAFAFB"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/withdrawView"
                    android:layout_width="17dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="29dp"
                    android:background="@mipmap/activity_image_adjust_withdraw_button"
                    android:contentDescription="@string/app_name" />

                <ImageView
                    android:id="@+id/penView"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="30dp"
                    android:background="@mipmap/activity_image_adjust_pen_button"
                    android:contentDescription="@string/app_name" />

                <ImageView
                    android:id="@+id/rotateView"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="30dp"
                    android:background="@mipmap/activity_image_adjust_rotate_button"
                    android:contentDescription="@string/app_name" />

                <ImageView
                    android:id="@+id/reverseXView"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginTop="30dp"
                    android:background="@mipmap/activity_image_adjust_honl_button"
                    android:contentDescription="@string/app_name" />

                <ImageView

                    android:id="@+id/reverseYView"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginTop="30dp"
                    android:background="@mipmap/activity_image_adjust_vertical_button"
                    android:contentDescription="@string/app_name" />

                <ImageView
                    android:id="@+id/brightnessView"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="30dp"
                    android:background="@mipmap/activity_main_brightness_button"
                    android:contentDescription="@string/app_name" />

                <ImageView
                    android:id="@+id/contrastView"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="25dp"
                    android:background="@mipmap/activity_image_adjust_contrast_button"
                    android:contentDescription="@string/app_name" />

            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.cutimageview.EditImageView
                android:id="@+id/activity_main_edit_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <SeekBar
                android:id="@+id/activity_main_brightness_seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:visibility="gone" />

            <SeekBar
                android:id="@+id/activity_main_contrast_seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:visibility="gone" />

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>