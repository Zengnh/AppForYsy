<?xml version="1.0" encoding="UTF-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 整体透明画布 -->
    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/screenView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            android:background="#00000000" />

        <View
            android:id="@+id/topView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/screenView"
            android:background="#33000000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/screenView"
            android:background="#33000000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@id/topView"
            android:layout_toLeftOf="@id/screenView"
            android:background="#33000000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@id/topView"
            android:layout_toRightOf="@id/screenView"
            android:background="#33000000" />
    </RelativeLayout>

    <!-- 扫描取景框 -->
    <com.zxinglib.view.ViewfinderView
        android:id="@+id/viewfinder_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="top"
            android:layout_marginTop="24dp">

            <ImageButton
                android:id="@+id/capture_imageview_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:background="@mipmap/icon_back_nor" />

            <ImageView
                android:id="@+id/selectImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@mipmap/x_code_nav_album" />
        </RelativeLayout>

        <View
            android:id="@+id/center_point"
            android:layout_width="1px"
            android:layout_height="1px"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/imgOpenLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/center_point"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:src="@mipmap/icon_camera_linght" />

        <LinearLayout
            android:id="@+id/toMayZcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/fillet_black_aaf_radius6"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:visibility="gone"
            android:paddingRight="10dp"
            android:paddingBottom="5dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="3dp"
                android:src="@mipmap/icon_z_code_while" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/myIdcard"
                android:textColor="#fff"
                android:textSize="13sp" />

        </LinearLayout>
    </RelativeLayout>

</merge>