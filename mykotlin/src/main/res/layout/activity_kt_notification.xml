<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgCom"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_1e_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <Button
                android:id="@+id/openLeftlayout"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/fill_change_camera"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="O"
                android:layout_marginLeft="16dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <Button
            android:id="@+id/btn1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/fill_change_camera"
            android:gravity="center"
            android:text="btn1" />


        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="btn2" />


        <Button
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="btn4" />


        <Button
            android:id="@+id/btn5"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:text="to set notification" />

        <TextView
            android:id="@+id/textValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_1e" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/leftLayout"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/bg_line_focu_false"
        android:fitsSystemWindows="true"
        android:orientation="vertical" >





    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>

